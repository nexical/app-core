{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "modules/**/*",
    "modules/*/src/types.d.ts",
    "prisma.config.ts",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist", "prisma", "scripts"],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["modules/*"],
      "@tests/*": ["tests/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true
  }
}
