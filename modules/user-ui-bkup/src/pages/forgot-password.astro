---
import Layout from "@/layouts/Layout.astro";
import { ForgotPasswordForm } from "@modules/user-ui/src/components/auth/forgot-password-form";
import { config } from "@/lib/core/config";
import { PageGuard } from "@/lib/ui/page-guard";

const guard = await PageGuard.protect(Astro, "anonymous");
if (guard) return guard;
---

<Layout title={`Forgot Password - ${config.PUBLIC_SITE_NAME}`} showShell={true}>
    <ForgotPasswordForm client:load />
</Layout>
