---
import Layout from "@/layouts/Layout.astro";

const features = [
    {
        title: "Modular Architecture",
        description:
            "Built on the Shell & Registry pattern for infinite scalability.",
        icon: "ðŸ§©",
    },
    {
        title: "Agentic Core",
        description:
            "Powered by advanced AI agents that understand your codebase.",
        icon: "ðŸ¤–",
    },
    {
        title: "SaaS Operating System",
        description:
            "A complete ecosystem for building modern web applications.",
        icon: "ðŸš€",
    },
];
---

<Layout title="Welcome to Nexical" showShell={true}>
    <div
        class="relative w-full h-full overflow-hidden bg-slate-50 dark:bg-slate-950 text-slate-900 dark:text-white selection:bg-indigo-500/30"
    >
        <!-- Background Gradients -->
        <div class="fixed inset-0 z-0 overflow-hidden pointer-events-none">
            <div
                class="absolute top-0 left-1/4 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl -translate-y-1/2"
            >
            </div>
            <div
                class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl translate-y-1/2"
            >
            </div>
        </div>

        <!-- Scrollable Content Wrapper -->
        <div
            class="relative z-10 w-full overflow-y-auto"
            style="height: calc(100vh - var(--header-height, 64px));"
        >
            <div
                class="container mx-auto px-6 py-24 flex flex-col items-center"
            >
                <!-- Hero Section -->
                <div class="text-center space-y-8 max-w-4xl mx-auto">
                    <div
                        class="inline-flex items-center space-x-2 px-3 py-1 rounded-full bg-white/50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800 backdrop-blur-sm mb-8 animate-fade-in shadow-sm dark:shadow-none"
                    >
                        <span
                            class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
                        ></span>
                        <span
                            class="text-xs font-medium text-slate-600 dark:text-slate-400 tracking-wide uppercase"
                            >System Operational</span
                        >
                    </div>

                    <h1
                        class="text-5xl md:text-7xl font-bold tracking-tight text-slate-900 dark:text-white"
                    >
                        <span
                            class="bg-clip-text text-transparent bg-gradient-to-r from-slate-900 via-slate-700 to-slate-500 dark:from-white dark:via-slate-200 dark:to-slate-400"
                        >
                            The Nexus Ecosystem
                        </span>
                    </h1>

                    <p
                        class="text-xl md:text-2xl text-slate-600 dark:text-slate-400 font-light leading-relaxed max-w-2xl mx-auto"
                    >
                        The next generation of agentic web development. A
                        modular, high-performance SaaS operating system designed
                        for the future.
                    </p>

                    <div
                        class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-8"
                    >
                        <a
                            href="/login"
                            class="group relative px-8 py-4 bg-indigo-600 hover:bg-indigo-500 rounded-xl font-medium transition-all duration-200 hover:shadow-lg hover:shadow-indigo-500/25 hover:-translate-y-0.5 overflow-hidden text-white"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-to-r from-indigo-400/0 via-white/20 to-indigo-400/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"
                            >
                            </div>
                            <span class="relative">Enter System</span>
                        </a>

                        <a
                            href="https://github.com/google/gemini"
                            class="px-8 py-4 bg-white dark:bg-slate-900 hover:bg-slate-50 dark:hover:bg-slate-800 border border-slate-200 dark:border-slate-800 rounded-xl font-medium transition-all duration-200 hover:-translate-y-0.5 text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white shadow-sm dark:shadow-none"
                        >
                            Documentation
                        </a>
                    </div>
                </div>

                <!-- Features Grid -->
                <div
                    class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-32 w-full max-w-6xl"
                >
                    {
                        features.map((feature) => (
                            <div class="group p-8 rounded-2xl bg-white/50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800 hover:border-indigo-500/30 hover:bg-white/80 dark:hover:bg-slate-900/80 transition-all duration-300 shadow-sm dark:shadow-none">
                                <div class="text-4xl mb-6 group-hover:scale-110 transition-transform duration-300">
                                    {feature.icon}
                                </div>
                                <h3 class="text-xl font-semibold text-slate-900 dark:text-white mb-3">
                                    {feature.title}
                                </h3>
                                <p class="text-slate-600 dark:text-slate-400 leading-relaxed">
                                    {feature.description}
                                </p>
                            </div>
                        ))
                    }
                </div>

                <!-- Footer -->
                <footer
                    class="mt-32 text-center text-slate-500 dark:text-slate-600 text-sm"
                >
                    <p>
                        &copy; {new Date().getFullYear()} Nexus Ecosystem. All rights
                        reserved.
                    </p>
                </footer>
            </div>
        </div>
    </div>
</Layout>
