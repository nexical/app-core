{
  "name": "app-core",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "npm run setup && astro build",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:seed": "npx prisma db seed",
    "db:validate": "npx prisma validate",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "setup:db": "npx tsx scripts/generate-prisma.ts && npm run db:generate && npm run db:push && npm run db:seed",
    "setup:theme": "npx tsx scripts/generate-theme.ts",
    "setup": "npm run setup:db && npm run setup:theme",
    "test:e2e": "npx playwright test",
    "test:integration": "npx vitest run -c vitest.integration.config.ts",
    "test:unit": "npx vitest run -c vitest.unit.config.ts",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix"
    ]
  },
